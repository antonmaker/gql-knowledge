{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "lib": ["ES2023"],
    "module": "ES2022",
    "target": "ES2018",
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": false,
    "removeComments": true,
    "noImplicitAny": true,
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "types": ["node"],
    "strict": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "build"]
}
